<turbo-frame id="timeline-frame">

<div class="space-y-8 relative before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-slate-300 before:to-transparent">

    {% for link in links %}
    <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group is-active">
        <!-- Icon -->
        <div class="flex items-center justify-center w-10 h-10 rounded-full border border-white bg-slate-300 group-[.is-active]:bg-emerald-500 text-slate-500 group-[.is-active]:text-emerald-50 shadow shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2"></div>
        <!-- Card -->
        <div class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] bg-white p-4 rounded-lg border border-slate-200 shadow">
            <details data-controller="timeline-item" data-timeline-item-target="details">
                <summary class="flex items-center justify-between space-x-2 mb-1">
                <div class="flex justify-between w-full">
                    <div class="font-bold text-slate-900">{{ link.title }}</div>
                    <time class="font-caveat font-medium text-indigo-500">{{ link.time }}</time>
                </div>
                <button class="ml-auto" data-action="timeline-item#toggle">
                    <svg class="fill-current opacity-75 w-4 h-4 -mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.95 10.707l.707-.707L8 4.343 6.586 5.757 10.828 10l-4.242 4.243L8 15.657l4.95-4.95z"/></svg>
                </button>
                </summary>
                {{ render(path('app_timeline_item', { "timelineItem" : link.timelineItem })) }}
            </details>
        </div>
    </div>
    {% endfor %}
</div>
</turbo-frame>