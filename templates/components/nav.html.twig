<div data-controller="menu" class="sticky top-0 z-50 pt-2 mx-4">
  <nav class="rounded rounded-2xl shadow-2xl z-50 bg-white not-prose" role="nav">
      <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
          <a href="/" class="typo-h1 flex items-center space-x-3 rtl:space-x-reverse">
              Audrey &amp; Robin
          </a>

          <!-- Menu classique (visible seulement sur les grands écrans) -->
          <div class="hidden lg:flex space-x-8">
            {% for item in navItems %}
            <a class="font-bold" href="{{ item.route }}" data-controller="scroll-to"
            data-scroll-to-offset-value="64"
            data-scroll-to-behavior-value="smooth">{{ item.label }}</a>
          {% endfor %}
          </div>

          <!-- Bouton burger (affiché uniquement sur petits écrans) -->
          <button data-menu-target="button" data-action="click->menu#toggle"
              class="relative inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg lg:hidden focus:outline-none focus:ring-2 focus:ring-gray-200">
              <span class="sr-only">Ouverture du menu principal</span>
              <div class="burger-line absolute w-5 h-0.5 bg-black transition-all duration-300 top-2"></div>
              <div class="burger-line absolute w-5 h-0.5 bg-black transition-all duration-300 top-4"></div>
              <div class="burger-line absolute w-5 h-0.5 bg-black transition-all duration-300 top-6"></div>
            </button>
      </div>
  </nav>

  <!-- Menu latéral pour petits écrans -->
  <div data-menu-target="menu" class="menu-enter lg:hidden">
      <div class="p-6 flex flex-col h-full">
          <!-- Bouton Fermer (croix animée) -->
          <button data-action="click->menu#toggle" class="absolute top-6 right-6 w-10 h-10 flex items-center justify-center">
              <div class="close-line absolute w-5 h-0.5 bg-black rotate-45 transition-all duration-300"></div>
              <div class="close-line absolute w-5 h-0.5 bg-black -rotate-45 transition-all duration-300"></div>
          </button>
          <div role="nav" class="flex flex-col pt-10 gap-y-8">
            {% for item in navItems %}
            <a href="{{ item.route }}" class="block text-4xl no-underline" data-action="click->menu#toggle">{{ item.label }}</a>
            {% endfor %}
          </div>
          
      </div>
  </div>
</div>