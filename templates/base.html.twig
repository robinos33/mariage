<!DOCTYPE html>
<html data-theme="pastel">
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %} | Mariage d'Audrey & Robin</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href="data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20viewBox%3D%220%200%2032%2032%22%3E%3Cpath%20d%3D%22M16%2029S4%2019%204%2010c0-4.418%203.582-8%208-8%202.5%200%204.5%201.5%206%203.5C20.5%203.5%2022.5%202%2025%202c4.418%200%208%203.582%208%208%200%209-12%2019-12%2019z%22%20fill%3D%22red%22/%3E%3C/svg%3E"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="{{ csrf_token('default') }}">
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}" />
    <link
      rel="stylesheet"
      href="{{ asset('vendor/daisyui/dist/full.min.css') }}"
    />
    {% endblock %} {% block javascripts %}
    {% block importmap %}{{ importmap("app") }}{% endblock %} {% endblock %}
  </head>
  <body class="min-h-screen bg-custom-grey" data-controller="csrf">
    {% block nav %}
    {{
      component("nav", {
        navItems: [
          { label: "Déroulé de la journée", route: "#planning" },
          { label: "Lieu des festivités", route: "#place" },
          { label: "Je confirme ma participation", route: "#confirmation" }
        ],
        currentRoute: app.request.attributes.get("_route")
      })
    }}
    {% endblock %}
    <div class="mt-16">{% block body %}{% endblock %}</div>
  </body>
</html>
